<h1>New Game</h1>

<ul class="list-inline">
<% @letters.each do |letter| %>
<li class="list-inline-item letter-style"> <%= letter %></li>
<% end %>
</ul>

<p>What is the longest word you can find?</p>
<form action="/score" method="post" class="input-group mb-3">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" placeholder="your word..." class="form-control">
  <input type="submit" value="Play!" class="btn btn-primary">
</form>
